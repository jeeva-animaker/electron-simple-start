{
    "short_name": "Sample",
    "name": "Sample",
    "version": "1.0.0",
    "manifest_version": 2,
    "browser_action": {},
    "background": {
        "page": "dist/background/index.html"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/content_scripts/app/index.js"
            ]
        }
    ],
    "permissions": [
        "<all_urls>",
        "tabCapture",
        "activeTab",
        "tabs",
        "storage",
        "desktopCapture",
        "notifications",
        "downloads"
    ],
    "web_accessible_resources": [
        "dist/public/video/*",
        "dist/public/video/*.js"
    ]
}